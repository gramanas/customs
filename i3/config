# Modes
set $mode_power [p]oweroff [r]eboot [l]ock [e]xit i3
mode "$mode_power"{
     bindsym e exec "i3-nagbar -t warning -m 'Exit i3?' -b 'Yup' 'i3-msg exit'"; mode "default"
     bindsym l exec i3lock -i ~/Pictures/arch_wbo.png; mode "default"
     bindsym r exec systemctl reboot
     bindsym p exec systemctl poweroff

     bindsym control+g mode "default"
     bindsym Escape mode "default"
     bindsym Return mode "default"
}

set $mode_launcher Start: [f]irefox [e]macs [t]mux
mode "$mode_launcher"{
     bindsym f exec firefox; mode "default"
     bindsym e exec emacsg; mode "default"
     bindsym t exec urxvt-server-client -e tmux; mode "default"
     bindsym c exec urxvt-server-client -e cmd; mode "default"

     bindsym control+g mode "default"
     bindsym Escape mode "default"
     bindsym Return mode "default"
}

exec_always --no-startup-id nm-applet
exec_always --no-startup-id feh --bg-fill ~/customs/wallpaper.png


