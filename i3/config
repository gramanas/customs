# change focus EMACS
bindsym $mod+a focus left
bindsym $mod+n focus down
bindsym $mod+p focus up
bindsym $mod+e focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+a move left
bindsym $mod+Shift+n move down
bindsym $mod+Shift+p move up
bindsym $mod+Shift+e move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# resize
bindsym $mod+Shift+Ctrl+Left resize shrink width 10 px or 10 ppt
bindsym $mod+Shift+Ctrl+Up resize shrink height 10 px or 10 ppt
bindsym $mod+Shift+Ctrl+Down resize grow height 10 px or 10 ppt
bindsym $mod+Shift+Ctrl+Right resize grow width 10 px or 10 ppt

bindsym $mod+Shift+Ctrl+a resize shrink width 10 px or 10 ppt
bindsym $mod+Shift+Ctrl+p resize shrink height 10 px or 10 ppt
bindsym $mod+Shift+Ctrl+n resize grow height 10 px or 10 ppt
bindsym $mod+Shift+Ctrl+e resize grow width 10 px or 10 ppt


