# sound control
bindsym XF86AudioRaiseVolume exec ponymix increase 5; exec pkill -SIGRTMIN+10 i3blocks # increase sound volume
bindsym XF86AudioLowerVolume exec ponymix decrease 5; exec pkill -SIGRTMIN+10 i3blocks # decrease sound volume
bindsym XF86AudioMute exec ponymix toggle; exec pkill -SIGRTMIN+10 i3blocks # mute sound

# cmus controls
bindsym XF86AudioPlay exec --no-startup-id cmus-remote -u; exec pkill -SIGRTMIN+10 i3blocks # play/pause
bindsym Mod1+XF86AudioRaiseVolume exec --no-startup-id cmus-remote -n; exec pkill -SIGRTMIN+10 i3blocks # next
bindsym Mod1+XF86AudioLowerVolume exec --no-startup-id cmus-remote -r; exec pkill -SIGRTMIN+10 i3blocks # prev
bindsym Shift+XF86AudioRaiseVolume exec --no-startup-id cmus-remote -k +5; exec pkill -SIGRTMIN+10 i3blocks # seek next
bindsym Shift+XF86AudioLowerVolume exec --no-startup-id cmus-remote -k -5; exec pkill -SIGRTMIN+10 i3blocks # seek prev

# extras
